<component>
	<!-- First-Run Wizard: Connection Screen -->
	<!-- User enters Moonraker IP/hostname and port, tests connection -->

	<view extends="lv_obj"
	      width="100%"
	      height="100%"
	      style_bg_opa="0"
	      style_border_width="0"
	      style_pad_all="0"
	      flex_flow="column"
	      flex_align="start center start"
	      name="wizard_connection_root">

		<!-- Help text -->
		<lv_label text="Enter your printer's network address"
		          width="100%"
		          style_text_font="montserrat_20"
		          style_text_color="#text_primary"
		          style_pad_bottom="#gap_small"/>

		<lv_label text="Usually looks like 192.168.1.100 or printer.local"
		          width="100%"
		          style_text_font="montserrat_16"
		          style_text_color="#text_muted"
		          style_pad_bottom="#padding_normal"/>

		<!-- IP address label -->
		<lv_label text="Network Address"
		          width="100%"
		          style_text_font="montserrat_20"
		          style_text_color="#text_primary"
		          style_pad_bottom="#gap_small"/>

		<!-- IP address input -->
		<lv_textarea name="ip_input"
		             text=""
		             placeholder_text="192.168.1.100"
		             one_line="true"
		             width="100%"
		             height="#header_height"
		             style_bg_color="#card_bg_dark"
		             style_text_color="#text_primary"
		             style_text_font="montserrat_20"
		             style_radius="#card_radius"
		             style_pad_all="#padding_card"
		             style_border_width="#input_border_width"
		             style_border_color="#text_primary"
		             style_border_opa="100%"
		             style_placeholder_text_color="#text_muted"/>

		<!-- Port label -->
		<lv_label text="Port"
		          width="100%"
		          style_text_font="montserrat_20"
		          style_text_color="#text_primary"
		          style_pad_top="#padding_normal"
		          style_pad_bottom="#gap_small"/>

		<!-- Port input -->
		<lv_textarea name="port_input"
		             text=""
		             placeholder_text="7125"
		             one_line="true"
		             width="100%"
		             height="#header_height"
		             style_bg_color="#card_bg_dark"
		             style_text_color="#text_primary"
		             style_text_font="montserrat_20"
		             style_radius="#card_radius"
		             style_pad_all="#padding_card"
		             style_border_width="#input_border_width"
		             style_border_color="#text_primary"
		             style_border_opa="100%"
		             style_placeholder_text_color="#text_muted"/>

		<!-- Test connection button -->
		<lv_button name="btn_test_connection"
		           width="100%"
		           height="#button_height"
		           style_bg_color="#primary_color"
		           style_text_color="#text_on_primary"
		           style_pad_top="#padding_normal">
			<lv_label text="Test Connection"
			          style_text_font="montserrat_20"/>
		</lv_button>

		<!-- Connection status label -->
		<lv_label name="connection_status"
		          text=""
		          width="100%"
		          style_text_font="montserrat_16"
		          style_text_color="#text_secondary"
		          style_pad_top="#gap_normal"/>

	</view>
</component>
